<% include ../partials/header %>
<div class = "container">
    <div class = "jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <h3>Campgrounds from all over the world picked by our experts just for you.</h3>
    <a type="button" class = "btn btn-primary" href = "/campgrounds/new">Add New Campground</a>
</div>

    <div class = "row" style = "display:flex; flex-wrap:wrap;">
        <%campgrounds.forEach(function(campground){%>
        <div class = "col-md-3 col-sm-6 photo">
            <div class="thumbnail">
                <img src = "<%=campground.image%>">
            <div class = "caption">
                <h4><%=campground.name%></h4>
                <a type="button" class = "btn btn-primary" href = "/campgrounds/<%=campground._id%>">More Info</a>
            </div>    
            </div>
        </div>
        
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>


